# Blockchain Service Configuration
PORT=3002
NODE_ENV=development

# Hyperledger Fabric Configuration
FABRIC_NETWORK_PATH=./network
FABRIC_WALLET_PATH=./wallet
FABRIC_MSP_ID=Org1MSP
FABRIC_USER_NAME=appUser
FABRIC_CHANNEL_NAME=mychannel
FABRIC_CHAINCODE_NAME=fracontract

# Fabric Gateway Configuration
FABRIC_CA_URL=https://localhost:7054
FABRIC_PEER_URL=grpc://localhost:7051
FABRIC_ORDERER_URL=grpc://localhost:7050

# Security Configuration
HASH_ALGORITHM=sha256
ENCRYPTION_KEY=your-secret-key-here-change-in-production

# API Configuration
MAX_FILE_SIZE=10MB
SUPPORTED_FORMATS=jpg,jpeg,png,pdf

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/blockchain.log

# Integration URLs
BACKEND_API_URL=http://localhost:5000
AI_SERVICE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# MongoDB Configuration for Blockchain Metadata
MONGO_URI=mongodb://localhost:27017/fra_blockchain
MONGO_DB_NAME=fra_blockchain

# Blockchain Network Configuration
FABRIC_TLS_ENABLED=false
FABRIC_DISCOVERY_ENABLED=true